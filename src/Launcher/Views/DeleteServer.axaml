<?xml version="1.0" encoding="UTF-8"?>
<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="using:Launcher.Views"
    xmlns:vm="using:Launcher.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    mc:Ignorable="d"
    d:DesignWidth="500"
    d:DesignHeight="100"
    x:DataType="vm:DeleteServer"
    x:Class="Launcher.Views.DeleteServer">

	<Grid>
		<!-- Define rows: 
             1 for title, 
             1 for confirmation text, 
             1 for buttons -->
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Title TextBlock -->
		<TextBlock
            Grid.Row="0"
            FontSize="18"
            HorizontalAlignment="Center"
            Text="{StaticResource Text.Delete_Server}"
            FontFamily="{StaticResource FontDefault}" />

		<!-- Confirmation TextBlock -->
		<TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            Text="{StaticResource Text.Delete_Server.Confirm}"
            FontFamily="{StaticResource FontDefault}"
            Margin="5"
            FontSize="15" />

		<!-- Buttons area: use a Grid with two columns -->
		<Grid Grid.Row="2" HorizontalAlignment="Center"  Margin="0,10,0,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>

			<!-- Yes Button -->
			<Button
                Grid.Column="0"
                Classes="flat primary"
                Command="{Binding DeleteServerCommand}"
                Content="{StaticResource Text.Yes}"
                FontFamily="{StaticResource FontDefault}"
                Margin="0,0,10,0">
				<!-- Right margin -->
				<Button.Background>
					<LinearGradientBrush StartPoint="50%,0%" EndPoint="50%,100%">
						<GradientStop Color="#96B9D9" Offset="0.0"/>
						<GradientStop Color="#202959" Offset="4.0"/>
						<GradientStop Color="#37538C" Offset="0.8"/>
					</LinearGradientBrush>
				</Button.Background>
			</Button>

			<!-- No Button -->
			<Button
                Grid.Column="1"
                Classes="flat primary"
                Command="{Binding CancelDeleteServerCommand}"
                Content="{StaticResource Text.No}"
                FontFamily="{StaticResource FontDefault}">
				<Button.Background>
					<LinearGradientBrush StartPoint="50%,0%" EndPoint="50%,100%">
						<GradientStop Color="#96B9D9" Offset="0.0"/>
						<GradientStop Color="#202959" Offset="4.0"/>
						<GradientStop Color="#37538C" Offset="0.8"/>
					</LinearGradientBrush>
				</Button.Background>
			</Button>
		</Grid>
	</Grid>
</UserControl>