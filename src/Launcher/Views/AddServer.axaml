<?xml version="1.0" encoding="UTF-8"?>
<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="using:Launcher.Views"
    xmlns:vm="using:Launcher.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
    mc:Ignorable="d"
    d:DesignWidth="500"
    d:DesignHeight="150"
    x:DataType="vm:AddServer"
    x:Class="Launcher.Views.AddServer">

	<Grid>
		<!-- Define rows for the header, input section, and buttons -->
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Header TextBlock centered -->
		<Grid Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock FontSize="18" Text="{DynamicResource Text.Add_Server.ServerUrl}" FontFamily="{StaticResource FontDefault}" />
		</Grid>

		<!-- Input section with overlayed TextBox over image -->
		<Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
			<!-- Place both image and textbox in the same Grid -->
			<asyncImageLoader:AdvancedImage Source="/Assets/fr_asset4.png" Stretch="None"/>
			<TextBox
				CaretBrush="Black"
				v:AutoFocusBehaviour.IsEnabled="True"
				Foreground="Black"
				FontSize="13"
				FontWeight="SemiBold"
				Width="254"
				Height="22"
				Text="{Binding ServerUrl, Mode=TwoWay}"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Background="Transparent"
				BorderBrush="Transparent"/>
		</Grid>

		<!-- Buttons row -->
		<Grid Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>

			<Button
                Classes="flat primary"
                Command="{Binding AddServerCommand}"
                Content="{StaticResource Text.Add}"
                FontFamily="{StaticResource FontDefault}"
                HotKey="Enter"
                Grid.Column="0" Margin="5,0">
				<Button.Background>
					<LinearGradientBrush StartPoint="50%,0%" EndPoint="50%,100%">
						<GradientStop Color="#687AA7" Offset="0.0"/>
						<GradientStop Color="#3C4C74" Offset="0.8"/>
					</LinearGradientBrush>
				</Button.Background>
			</Button>

			<Button
                Classes="flat primary"
                Command="{Binding CancelAddServerCommand}"
                Content="{StaticResource Text.Cancel}"
                FontFamily="{StaticResource FontDefault}"
                Grid.Column="1" Margin="5,0">
				<Button.Background>
					<LinearGradientBrush StartPoint="50%,0%" EndPoint="50%,100%">
						<GradientStop Color="#687AA7" Offset="0.0"/>
						<GradientStop Color="#3C4C74" Offset="0.8"/>
					</LinearGradientBrush>
				</Button.Background>
			</Button>
		</Grid>
	</Grid>
</UserControl>